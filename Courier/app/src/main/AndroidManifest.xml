<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.courier">

    <application
        android:allowBackup="true"
        android:icon="@drawable/courier"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".zxing.android.CaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity android:name=".AdminAddressActivity" />
        <activity android:name=".AdminCourierActivity" />
        <activity android:name=".UserInfoActivity" />
        <activity android:name=".ViewQRcodeActivity" />
        <activity android:name=".EditAccountMessageActivity" />
        <activity android:name=".AccountManageActivity" />
        <activity android:name=".AccountMessageActivity" />
        <activity android:name=".RegisteActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".AboutHelpActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

</manifest>